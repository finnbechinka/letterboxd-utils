{
    "manifest_version": 2,
    "name": "Letterboxd utils",
    "version": "1.0",
    "description": "Utilities for letterboxd.com. For now just filtering movies based on streaming providers.",
    "icons": {
        "48": "static/icon.png",
        "96": "static/icon.png"
    },
    "permissions": [
        "https://letterboxd.com/*",
        "https://api.themoviedb.org/3/*",
        "storage",
        "webRequest"
    ],
    "background": {
        "scripts": [
            "dist/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://letterboxd.com/*"
            ],
            "js": [
                "dist/content-script.js"
            ],
            "css": [
                "static/styles.css"
            ]
        }
    ],
    "options_ui": {
        "page": "static/options.html",
        "browser_style": true,
        "open_in_tab": false
    }
}