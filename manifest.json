{
    "manifest_version": 2,
    "name": "Letterboxd utils",
    "version": "1.1.1",
    "description": "Utilities for letterboxd.com. For now just filtering movies based on streaming providers.",
    "icons": {
        "48": "icon.png",
        "96": "icon.png"
    },
    "permissions": [
        "https://letterboxd.com/*",
        "https://api.themoviedb.org/3/*",
        "storage",
        "webRequest"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://letterboxd.com/*"
            ],
            "js": [
                "content-script.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "options_ui": {
        "page": "options.html",
        "browser_style": true,
        "open_in_tab": false
    }
}
